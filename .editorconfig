# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{svelte,html}]
indent_style = space
indent_size = 2

[*.md]
max_line_length = 88
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = false

[*.json]
indent_size = 4

[*.{yaml,yml}]
indent_size = 2
indent_style = space

[package.json,.prettierrc]
indent_size = 2
